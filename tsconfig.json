{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": ".",
    "baseUrl": ".",
    "paths": {
      "@application/*": ["src/application/*"],
      "@config/*": ["src/config/*"],
      "@domain/*": ["src/domain/*"],
      "@i18n": ["src/i18n/index.ts"],
      "@infrastructure/*": ["src/infrastructure/*"],
      "@presentation/*": ["src/presentation/*"]
    }
  },
  "include": ["src/**/*", "esbuild.config.ts", "vitest.config.ts", "commitlint.config.ts"],
  "exclude": ["node_modules", "dist"]
}
