{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "declaration": false,
    "sourceMap": true,
    "outDir": "./lib",
    "rootDir": "."
  },
  "include": ["src/**/*", "esbuild.config.ts", "vitest.config.ts", "commitlint.config.ts"],
  "exclude": ["node_modules", "dist"]
}
