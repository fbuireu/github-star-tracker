{
  "name": "github-star-tracker",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub Action to track star count changes across your repositories",
  "main": "src/index.ts",
  "keywords": [
    "github-action",
    "github-stars",
    "tracker",
    "github",
    "repository",
    "typescript"
  ],
  "author": "Ferran Buireu <fbuireu@gmail.com>",
  "license": "AGPL-3.0-only",
  "scripts": {
    "prepare": "husky",
    "build": "ncc build src/index.ts -o dist --source-map --license licenses.txt",
    "test:ut": "vitest run",
    "test:ut:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "test": "pnpm run test:coverage",
    "format": "biome check --write --no-errors-on-unmatched .",
    "lint": "biome lint --no-errors-on-unmatched .",
    "lint:fix": "pnpm run lint --fix",
    "typecheck": "tsc --noEmit",
    "check": "biome check --no-errors-on-unmatched . && pnpm run typecheck",
    "validate": "pnpm run check && pnpm run test && pnpm run build"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "js-yaml": "^4.1.0",
    "nodemailer": "^7.0.11"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@types/js-yaml": "^4.0.9",
    "@types/nodemailer": "^6.4.17",
    "@vercel/ncc": "^0.38.3",
    "@vitest/coverage-v8": "^3.0.5",
    "husky": "^9.1.7",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
