{
  "name": "github-star-tracker",
  "version": "1.0.6",
  "private": false,
  "description": "GitHub Action to track star count changes across your repositories",
  "main": "src/index.ts",
  "keywords": [
    "github-action",
    "github-stars",
    "tracker",
    "github",
    "repository",
    "typescript"
  ],
  "author": "Ferran Buireu <fbuireu@gmail.com>",
  "license": "AGPL-3.0-only",
  "engines": {
    "node": ">=24.0.0"
  },
  "packageManager": "pnpm@10.17.1",
  "scripts": {
    "prepare": "husky",
    "build": "tsx esbuild.config.ts",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "format": "biome check --write --no-errors-on-unmatched .",
    "lint": "biome lint --no-errors-on-unmatched .",
    "lint:fix": "pnpm run lint --fix",
    "typecheck": "tsc --noEmit",
    "check": "biome check --no-errors-on-unmatched . && pnpm run typecheck",
    "validate": "pnpm run check && pnpm run test:coverage && pnpm run build"
  },
  "dependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.0",
    "js-yaml": "^4.1.0",
    "nodemailer": "^8.0.0"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.14",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/commit-analyzer": "^13.0.1",
    "@semantic-release/git": "^10.0.1",
    "@semantic-release/github": "^12.0.6",
    "@semantic-release/npm": "^13.1.4",
    "@semantic-release/release-notes-generator": "^14.1.0",
    "@types/js-yaml": "^4.0.9",
    "@types/nodemailer": "^6.4.17",
    "@vitest/coverage-v8": "^3.0.5",
    "esbuild": "^0.27.3",
    "husky": "^9.1.7",
    "semantic-release": "^25.0.3",
    "tsx": "^4.21.0",
    "typescript": "^5.7.3",
    "vitest": "^3.0.5"
  }
}
